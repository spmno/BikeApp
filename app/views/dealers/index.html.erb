<h1><%= t("list_dealer") %></h1>

<table>
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.dealer.name") %></th>
      <th><%= t("activerecord.attributes.dealer.address") %></th>
      <th><%= t("activerecord.attributes.dealer.summary") %></th>
      <th><%= t("activerecord.attributes.bike.name") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dealers.each do |dealer| %>
      <tr>
        <td><%= dealer.name %></td>
        <td><%= dealer.address %></td>
        <td><%= dealer.summary %></td>
        <td><%= dealer.bike_id %></td>
        <td><%= link_to 'Show', dealer %></td>
        <td><%= link_to 'Edit', edit_dealer_path(dealer) %></td>
        <td><%= link_to 'Destroy', dealer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("new_dealer"), new_dealer_path %>
