<h1><%= t("list_brands") %></h1>

<table>
  <thead>
    <tr>
      <th><%= t("activerecord.models.name") %></th>
      <th><%= t("activerecord.models.photo") %></th>
      <th><%= t("activerecord.models.summary") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= brand.photo %></td>
        <td><%= brand.summary %></td>
        <td><%= link_to 'Show', brand %></td>
        <td><%= link_to 'Edit', edit_brand_path(brand) %></td>
        <td><%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("new_brand"), new_brand_path %>
